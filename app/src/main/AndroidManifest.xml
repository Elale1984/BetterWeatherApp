<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gcu.betterweather">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cloud_background"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.BetterWeather"
        android:name=".BetterWeatherApp">
        <activity
            android:name=".ui.AboutPage"
            android:exported="false" />
        <activity
            android:name=".ui.TenDayForecast"
            android:exported="false" />
        <activity
            android:name=".nav.BetterWeatherMainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.RegisterUser"
            android:exported="false" />
        <activity
            android:name=".ui.BWALoginView"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainUI"
            android:exported="true" />
    </application>

</manifest>